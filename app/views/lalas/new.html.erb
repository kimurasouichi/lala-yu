<!-- スイッチ画像 ここまで↑ -->

<script>
  "use stript";

  // ハンバーメニュー 画像の切り替えここから↓ //
  const menuBtn = document.getElementById("menu-btn");
  let hamburger = true;
  menuBtn.onclick = function () {
    if (hamburger) {
      menuBtn.src = "images/close.png";
      hamburger = false;
    } else {
      menuBtn.src = "images/menu.png";
      hamburger = true;
    }
  };
  // ハンバーメニュー 画像の切り替えここまで↑ //

  // フォーム フェードインここから↓ //
  $(function () {
    $(".h2_f").on("mousemove", function () {
      $(".form-contact").removeClass("hidden");
    });
  });
  // フォーム フェードインここまで↑ //

  // 営業時間 フェードアップここから↓ //
  $(function () {
    $("#line_a").on("mousemove", function () {
      $(".price").css("visibility", "visible");
      $(".price span").addClass("show_up1");
    });
  });

  // スマホ対応 //
  $(function () {
    $("#money_e").on("touchstart", function () {
      $(".price").css("visibility", "visible");
      $(".price span").addClass("show_up1");
    });
  });
  // 営業時間 フェードアップここまで↑ //

  // チケット スクロールイベントここから↓ //
  $(function () {
    $(document).on("scroll", function () {
      if ($(this).scrollTop() > 500) {
        $("#switch_a").removeClass("hidden");
        $("#switch_a2").removeClass("hidden");
      } else {
        $("#switch_a").addClass("hidden");
        $("#switch_a2").addClass("hidden");
      }
    });
  });
    // チケット スクロールイベントここまで↑ //

</script>
